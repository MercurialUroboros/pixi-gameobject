{
    "compilerOptions": {
        "outDir": "dist",
        "declarationDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "baseUrl": ".",
        "sourceMap": false,
    },
    "include": [
        "./src/index.ts",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}