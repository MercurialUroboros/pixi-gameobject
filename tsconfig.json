{
    "compilerOptions": {
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "./src/index.ts",
        "./types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}